<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardDistance"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2sp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/eventLogo"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/eventLogo">

                <TextView
                    android:id="@+id/eventStartTimeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:text="May 27, 2017 12.00 PM"/>

                <TextView
                    android:id="@+id/eventNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    tools:text="@string/event_name"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>